<%-include('cabecalho.ejs');%>   

<form method="post">
    <input type="text" class="pesquisa" name="pesquisa">
    <select name="tipo">
        <option value="nome">Terror</option>
        <option value="nome">Comédia</option>
        <option value="nome">Ação</option>
        <option value="nome">Drama</option>
        <option value="nome">Máfia</option>
    </select>
    <input type="submit" class="btn_pesquisa" value="Pesquisar">
</form>

<table>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ano</th>
            <th>Diretor</th>
            <th>Sinopse</th>
            <th>Foto</th>
            <th>Editar</th>
            <th>Deletar</th>
        </tr>
        <% Usuarios.forEach(function(usuario){  %>
        <tr>
            <td><%=usuario._id%></td>
            <td><%=usuario.nome%></td>
            <td><%=usuario.ano%></td>
            <td><%=usuario.diretor%></td>
            <td><%=usuario.sinopse%></td>
            <td><%=usuario.foto%></td>
            
            <td>
                <a href="/edt/<%=usuario._id%>">
                    <img src="/images/edit.png">
                </a>
            </td>
            <td>
                <a href="/del/<%=usuario._id%>">
                    <img src="/images/lixeira.png">
                </a>
            </td>
        </tr>
        <% }) %>
    </table>
<%-include('rodape.ejs');%>