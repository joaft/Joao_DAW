<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listagem de Usuários</title>
</head>
<body>
    <h1>Listagem de Usuários</h1>
    <p>
        <a href="/add"> Adicionar </a>
    </p>
    <table>
      <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Email</th>
          <th>Senha</th>
          <th>Foto</th>
          <th>Deletar</th>
      </tr>

      <% Usuarios.forEach(function(usuario){%>
      <tr>
          <td><%=usuario._id%></td>
          <td><%=usuario.nome%></td>
          <td><%=usuario.email%></td>
          <td><%=usuario.senha%></td>
          <td><%=usuario.foto%></td>
          <td>
              <a href ="/del/<%=usuario._id%>">Deletar </a>
          </td>
      </tr>

      <%})%>
    </table>
</body>
</html>